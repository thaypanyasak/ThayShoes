@{
    ViewData["Title"] = "Quản Lý Hóa Đơn";
}
@model X.PagedList.IPagedList<HoaDon>
@using X.PagedList
@using X.PagedList.Mvc.Core

<style>

    .header,.footer{
        display : none;
    }

    .wrapTable {
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .wrapTable table {
            width: 100%;
            border-collapse: collapse;
        }

        .wrapTable th, .wrapTable td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .wrapTable thead {
            background-color: #f2f2f2;
        }

        .wrapTable tbody tr:hover {
            background-color: #f5f5f5;
        }

        .wrapTable td button {
            padding: 5px 10px;
            background-color: #007bff;
            border: none;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            .wrapTable td button:hover {
                background-color: #0056b3;
            }

    .pagination {
        margin-top: 20px;
    }

    /* Hide the default dropdown arrow */
    select::-ms-expand {
        display: none;
    }

    select {
        padding: 5px 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    input[type="submit"] {
        padding: 5px 10px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="wrapTable">
            <h1 class="page-header">Quản Lý Hóa Đơn</h1>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Địa Chỉ</th>
                            <th>Tổng Tiền</th>
                            <th>Ngày Tháng</th>
                            <th>Trạng Thái</th>
                            <th>Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Total</td>
                                <td>@item.OrderDate</td>
                                <td>
                                    <form asp-action="updatetrangthai" method="post">
                                        <select name="trangthai">
                                            <option value="Chờ Xác Nhận">@item.OrderStatus</option>
                                            <option value="Chờ Lấy Hàng">Chờ Lấy Hàng</option>
                                            <option value="Đang Giao">Đang Giao</option>
                                            <option value="Thành Công">Thành Công</option>
                                        </select>
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="submit" value="Cập Nhật" />
                                    </form>
                                </td>
                                <td>
                                    <a class="primary_text chiTietButton" data-item-id="@item.Id" asp-action="chitiethoadon" asp-route-id="@item.Id">Xem Chi Tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("index", "crudhoadon", new { page = page }))
        </div>
    </div>
</div>
