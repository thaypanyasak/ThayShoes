    }

    .phicssprofile .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .phicssprofile .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .phicssprofile .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .phicssprofile .phicsswait {
        display: flex;
        flex-direction: column;
        align-items: center
    }



        .phicssprofile .phicsswait i {
            font-size: 19px;
            z-index: 9999;
        }

    .phicssprofile input {
        width: 32% !important;
    }

    .phicssprofile .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .phicssprofile .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .phicssprofile .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .phicssprofile .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .phicssprofile .h-100 {
        height: 100% !important;
    }

    .phicssprofile .profile input {
        border: 1px solid white;
        width: 50% !important;
    }

    .phicssprofile .shadow-none {
        box-shadow: none !important;
    }

    .phicsstrchitiet td {
