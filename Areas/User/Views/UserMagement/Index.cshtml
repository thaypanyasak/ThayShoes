<script>
    $(document).on("click", ".chiTietButton", function (e) {
        e.preventDefault(); // Ngăn chuyển hướng khi liên kết được nhấn
        // Thực hiện yêu cầu AJAX
        var itemId = $(this).data("item-id");
        $.ajax({
            url: `/User/UserMagement/getchitiet?id=${itemId}`,
            type: "POST",
            success: function (data) {
                $("#bodychitiet").empty();
                data.forEach(function (item) {
                    console.log(item);
                    var productItem = $(`
                                <tr class="phicsstrchitiet">
                                    <th scope="row"><img src="${item.sanPham.imageUrl}" alt="${item.sanPham.ame}" style="object-fit: cover; width: 80px; height: 80px" /></th>
                                     <td>${item.sanPham.name}</td>
                                    <td>${item.quantity}</td>
                                    <td>${item.productPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</td>
                                </tr>
                            `);
                    // Thêm dòng vào bảng có id "tablechitiet"
                    $("#bodychitiet").append(productItem);
                });
            },
            error: function () {
                alert("Đã xảy ra lỗi khi gửi yêu cầu.");
            }
        });
    });
</script>


<script>
    $("#editUserImgForm").submit(function (e) {
        e.preventDefault(); // Ngăn gửi form mặc định

        var formData = new FormData(this);

        $.ajax({
            url: "/User/UserMagement/edituserimg", // Thay thế ControllerName bằng tên của controller thích hợp
            type: "POST",
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Up Avata Thành Công',
                    showConfirmButton: false,
                    timer: 1500 // Tự động đóng sau 1.5 giây
                }).then(function () {
                    location.reload(); // Reload trang
                });
            },
            error: function () {
                alert("Đã xảy ra lỗi khi gửi yêu cầu.");
            }
        });
    });
</script>
<script>
    $("#editUserForm").submit(function (e) {
        e.preventDefault(); // Ngăn gửi form mặc định

        var formData = {
            Name: $("#Name").val(),
            Email: $("#Email").val(),
            Phone: $("#Phone").val(),
            Address: $("#Address").val()
        };

        $.ajax({
            url: "/User/UserMagement/edituser", // Thay "ControllerName" bằng tên thực tế của controller
            type: "POST",
            data: formData,
            success: function (response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Edit User Thành Công',
                    showConfirmButton: false,
                    timer: 1500 // Tự động đóng sau 1.5 giây
                }).then(function () {
                    location.reload(); // Reload trang
                });
            },
            error: function () {
                alert("Đã xảy ra lỗi khi gửi yêu cầu.");
            }
